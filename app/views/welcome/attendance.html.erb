<div class="container">
 <%= render ("navbar") %>

<h1>Please register your info here</h1>


<div class="attendance-form">
<%= form_tag("/welcome/login") do %>

<p>おなまえ</p>
<input name="name"  class="form-control">

<p>Email</p>
<input name="email"  class="form-control">

